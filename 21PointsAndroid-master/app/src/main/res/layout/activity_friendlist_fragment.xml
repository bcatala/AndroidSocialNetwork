<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/White"
   >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:background="@color/White"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Profile_to_search"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:hint="Profile to search"
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/message_button"
            style="?android:textAppearanceSmall"
            android:layout_width="55dp"
            android:layout_height="47dp"
            android:background="@drawable/direct" />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="424dp"
        android:layout_height="593dp" />

    <GridLayout
        android:layout_width="416dp"
        android:layout_height="43dp"
        android:background="@color/White"
        android:backgroundTint="@color/colorAccent"
        android:backgroundTintMode="add"
        android:columnCount="5"
        android:gravity="end"
        android:orientation="horizontal"

        android:rowCount="1">


        <Button
            android:id="@+id/home_butto"
            style="?android:textAppearanceSmall"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/home2" />

        <Button
            android:id="@+id/corazon_buto"
            style="?android:textAppearanceSmall"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/corazon" />

        <Button
            android:id="@+id/blanc"
            style="?android:textAppearanceSmall"
            android:layout_width="116dp"
            android:layout_height="47dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/White"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/perfil_butto"
            style="?android:textAppearanceSmall"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/perfil3"
            android:textAlignment="viewStart" />
        <Button
            android:id="@+id/misatge_button"
            style="?android:textAppearanceSmall"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@drawable/misatge"
            android:textAlignment="viewStart" />

    </GridLayout>


</LinearLayout>